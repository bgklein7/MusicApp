@model IEnumerable<MusicApp.Models.Record>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div id="indexcol" class="col-md-6">
            <h2>Index</h2>
        </div>
        <div id="createcol" class="col-md-6">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>
    </div>
</div>

                @foreach (var item in Model)
        {
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
        <div id="flipperone">
            <img class="top" src="@Html.DisplayFor(modelItem => item.ArtWork)" />
            <div id="albumBackContainer" class="container-fluid bottom">
                <div class="row row1">
                    <div class="col-lg-12">
                        @Html.DisplayFor(modelItem => item.AlbumTitle)
                    </div>
                </div>
                <div class="row row2">
                    <div class="col-lg-12">
                        @Html.DisplayFor(modelItem => item.Artist.ArtistName)
                    </div>
                </div>
                <div class="row row3">
                    <div class="col-md-4">
                        <p>Released:</p>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </div>
                </div>
                <div class="row row4">
                    <div class="col-md-4">
                        <p>Genre:</p>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(modelItem => item.Genre)
                    </div>
                </div>
            </div>
            </div>
            </div>
                <div class="col-md-4">
                        @Html.ActionLink("Edit", "Edit", new { id = item.AlbumID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.AlbumID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.AlbumID })
                    </div>
                </div>
            </div>


}
          